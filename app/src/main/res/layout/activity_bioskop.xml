<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bioskop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/h1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Daftar Theater XXI dan Cinepolis"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="25sp"
            tools:ignore="MissingConstraints" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Mall Tentrem XXI"
            android:layout_marginTop="40dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Mall Ciputra XXI"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Transmart Majapahit XXI"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Transmart SetiaBudi XXI"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="DP Mall XXI"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="The Park Semarang XXI"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cinepolis Java Supermall"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/film"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:text="Film"
            android:backgroundTint="#F39F5A"
            android:textColor="#D5DEEF"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/bio"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Bioskop"
            android:backgroundTint="#F39F5A"
            android:textColor="#D5DEEF"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>